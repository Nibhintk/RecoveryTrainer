      animation: slideInUp 0.8s ease-out;
    }

    .alert-icon {
      font-size: 1.2rem;
      margin-right: 10px;
    }

    /* Action Buttons */
    .btn-action {
      background: linear-gradient(45deg, #f093fb, #f5576c);
      border: none;
      padding: 12px 25px;
