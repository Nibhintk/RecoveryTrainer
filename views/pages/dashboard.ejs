      display: block;
    }

    .medical-value {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1rem;
      line-height: 1.5;
    }

    /* Medicine List */
    .medicine-list {
      display: grid;
      gap: 15px;
    }

    .medicine-item {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 15px;
      padding: 20px;
      border-left: 4px solid var(--success-color);
      transition: all 0.3s ease;
    }

    .medicine-item:hover {
      background: rgba(255, 255, 255, 0.15);
      transform: translateX(5px);
    }

    .medicine-name {
      color: white;
      font-weight: 600;
      font-size: 1.1rem;
      margin-bottom: 8px;
    }

    .medicine-details {
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.9rem;
    }

    .medicine-icon {
      float: right;
      color: var(--success-color);
      font-size: 1.2rem;
    }

    /* Alert Styles */
    .alert-warning-custom {
      background: rgba(245, 158, 11, 0.2);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(245, 158, 11, 0.3);
      border-radius: 20px;
      color: #fbbf24;
      padding: 25px;
      margin-bottom: 30px;
